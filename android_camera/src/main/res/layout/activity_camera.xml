<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huihui.camera.activity.CameraActivity">

    <Button
        android:id="@+id/openSystemCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openSystemCamera"
        android:text="打开系统相机获取缩略图" />

    <Button
        android:id="@+id/openBigSystemCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openBigSystemCamera"
        android:text="打开系统相机获取大图" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
